UserParameter=systemd.unit.is-active[*],systemctl is-active --quiet '$1' >/dev/null 2>&1 && echo 1 || echo 0
UserParameter=systemd.unit.is-failed[*],systemctl is-failed --quiet '$1' >/dev/null 2>&1 && echo 1 || echo 0
UserParameter=systemd.unit.is-enabled[*],systemctl is-enabled --quiet '$1' >/dev/null 2>&1 && echo 1 || echo 0
UserParameter=systemd.any.is-failed,systemctl --no-legend --failed 2>/dev/null | wc -l 2>/dev/null

