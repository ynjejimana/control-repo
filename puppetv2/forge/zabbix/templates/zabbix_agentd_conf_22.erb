PidFile=/var/run/zabbix/zabbix_agentd.pid
LogFile=/var/log/zabbix/zabbix_agentd.log
LogFileSize=100
DebugLevel=3
EnableRemoteCommands=<%= @common::zabbix::agent::enable_remote_commands %>
LogRemoteCommands=1
Server=<%= @zabbix_proxy_servers.join(",") %>
ServerActive=127.0.0.1
Hostname=<%= @hostname %>
RefreshActiveChecks=300
Include=<%= @agent_include_dir %>
<% @agent_include_dir_extra.each do |item| -%>
Include=<%= @config_dir %>/<%= item %>
<% end -%>
