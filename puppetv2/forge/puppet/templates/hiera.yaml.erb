:backends:
  - yaml
  - json

:logger: console

# Notes:
# environment here refers to puppet environment. All customer VMs should reside in the Production puppet environment unless POC
# customer_env refers to the customer's environment ie Dev, Test, Prod. Custom fact set in customer/soe/lib/facter/soe-facts.rb
# customer_tier refers to the customer's architecture tier ie FrontEnd,Mid,DB for instance
# customer_app refers to the customer's application groupings ie Apache,Tomcat for instance
:hierarchy:
  - "%{::environment}/host/%{::organization}/%{::location}/%{::fqdn}"
  - "%{::environment}/host/%{::organization}/%{::fqdn}"
  - "%{::environment}/host/%{::fqdn}"
  - "%{::environment}/host/networking/%{::fqdn}"
  - "%{::environment}/network/%{::network_bond0}"
  - "%{::environment}/network/%{::network_eth0}"
  - "%{::environment}/network/%{::network_eth1}"
  - "%{::environment}/hostgroup/%{::location}/%{::hostgroup}"
  - "%{::environment}/hostgroup/%{::hostgroup}"
  - "%{::environment}/domain/%{::domain}"
  - "%{::environment}/organization/%{::organization}/network/%{::network_bond0}"
  - "%{::environment}/organization/%{::organization}/network/%{::network_eth0}"
  - "%{::environment}/organization/%{::organization}/network/%{::network_ethernet0}"
  - "%{::environment}/organization/%{::organization}/network/%{::network_ens192}"
  - "%{::environment}/organization/%{::organization}/network/%{::network_ens160}"
  - "%{::environment}/organization/%{::organization}/network/%{::network_eth1}"
  - "%{::environment}/organization/%{::organization}/customer_env/customer_child_env/%{::customer_child_env}"
  - "%{::environment}/organization/%{::organization}/customer_env/%{::customer_env}/customer_app/%{::customer_app}"
  - "%{::environment}/organization/%{::organization}/customer_env/%{::customer_env}"
  - "%{::environment}/organization/%{::organization}/customer_tier/%{::customer_tier}"
  - "%{::environment}/organization/%{::organization}/customer_app/%{::customer_app}"
  - "%{::environment}/organization/%{::organization}/customer_pool/%{::customer_pool}/customer_env/%{::customer_env}/customer_tier/%{::customer_tier}"
  - "%{::environment}/organization/%{::organization}/customer_pool/%{::customer_pool}/customer_env/%{::customer_env}/customer_app/%{::customer_app}"
  - "%{::environment}/organization/%{::organization}/customer_pool/%{::customer_pool}/customer_env/%{::customer_env}/infrastructure/%{::infrastructure}"
  - "%{::environment}/organization/%{::organization}/customer_pool/%{::customer_pool}/customer_env/%{::customer_env}"
  - "%{::environment}/organization/%{::organization}/customer_pool/%{::customer_pool}/customer_tier/%{::customer_tier}"
  - "%{::environment}/organization/%{::organization}/customer_pool/%{::customer_pool}/customer_app/%{::customer_app}"
  - "%{::environment}/organization/%{::organization}/customer_pool/%{::customer_pool}"
  - "%{::environment}/organization/%{::organization}/os/%{::osfamily}/%{::operatingsystemmajrelease}"
  - "%{::environment}/organization/%{::organization}"
  - "%{::environment}/location/%{::organization}/%{::location}"
  - "%{::environment}/location/%{::location}"
  - "%{::environment}/environment/%{::environment}"
  - "%{::environment}/os/%{::osfamily}/%{::operatingsystemmajrelease}"
  - "%{::environment}/common"

:yaml:
  :datadir: /etc/puppet/hiera/data

:json:
  :datadir: /etc/puppet/hiera/data
