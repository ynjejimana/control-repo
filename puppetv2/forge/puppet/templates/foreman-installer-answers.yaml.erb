--- 
  puppet: 
    listen: true
    group: 'puppet'
    user: 'puppet'
    server: true
    ca_server: 'puppetca.esbu.lab.com.au'
    server_common_modules_path: "/etc/puppet/modules/common"
    server_environments: 
      - development
      - production
      - dr
    server_external_nodes: '/etc/puppet/node.rb'
    server_foreman_url: '<%= @foreman_server_url %>'
    server_httpd_service: 'httpd'
    server_reports: 'foreman'
    client_package: 
      - puppet
    server_facts: true
    server_ssl_dir: '/var/lib/puppet/ssl'
    <%- if @ca -%>
    server_ca: true
    <%- else -%>
    server_ca: false
    <%- end -%>
    server_dir: '/etc/puppet'
    server_passenger: true
    server_foreman_ssl_ca: '/var/lib/puppet/ssl/certs/ca.pem'
  foreman_proxy: 
    user: 'foreman-proxy'
    tftp: false
    dhcp: false
    bmc: false
    dns: false
    puppet: true
    puppetrun: true
    puppetrun_provider: salt
  <%- if @ca -%>
    puppetca: true
  <%- else -%>
    puppetca: false
  <%- end -%>
  foreman: false
