#################################
# <%= "#{@name} #{@network} #{@mask}" %>
#################################
subnet <%= @network %> netmask <%= @mask %> {
<% if @range -%>
  pool
  {
    range <%= @range %>;
  }
<% end -%>

  option subnet-mask <%= @mask %>;
  option routers <%= @gateway %>;
<% if @allow_unknown_clients -%>
  allow unknown-clients;
<% else -%>
  deny unknown-clients;
<% end -%>
<% if @pxeserver -%>
  next-server <%= @pxeserver %>;
  filename "<%= @pxefilename %>";
<% end -%>
}